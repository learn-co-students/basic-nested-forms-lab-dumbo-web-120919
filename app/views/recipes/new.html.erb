<h1>Create a Recipe</h1>

<%= form_for @recipe  do |f| %>

    <%= f.label :title %><br />
    <%= f.text_field :title %>
    <br />

    <%= f.fields_for :ingredients do |ingredient| %>
    Ingredient : <%= ingredient.text_area :name %><br />
    Quantity : <%= ingredient.text_area :quantity %><br />
    <%end%>
    <br />


    <%= f.submit %>
<% end %>
